{
  "dashboard": {
    "title": "Hubble - HTTP Golden Signals",
    "tags": ["hubble", "cilium", "http", "golden-signals"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(hubble_http_requests_total[5m])) by (destination_workload)",
            "legendFormat": "{{destination_workload}}"
          }
        ],
        "yaxes": [
          {
            "label": "requests/sec",
            "format": "reqps"
          }
        ]
      },
      {
        "id": 2,
        "title": "HTTP Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(hubble_http_requests_total{code=~\"5..\"}[5m])) by (destination_workload)",
            "legendFormat": "{{destination_workload}} errors"
          }
        ],
        "alert": {
          "name": "High HTTP Error Rate",
          "conditions": [
            {
              "evaluator": {
                "params": [0.05],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "type": "query"
            }
          ]
        }
      },
      {
        "id": 3,
        "title": "HTTP Latency (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(hubble_http_request_duration_seconds_bucket[5m])) by (destination_workload, le))",
            "legendFormat": "{{destination_workload}} p95"
          }
        ],
        "yaxes": [
          {
            "label": "seconds",
            "format": "s"
          }
        ]
      },
      {
        "id": 4,
        "title": "HTTP Status Codes",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum(increase(hubble_http_requests_total[5m])) by (code)",
            "legendFormat": "{{code}}"
          }
        ]
      }
    ],
    "refresh": "30s"
  }
}
